{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "rootDir": "src/",
        "target": "ES2020",
        "module": "ESNEXT",
        "noImplicitAny": true,
        "outDir": "dist/",
        "removeComments": true,
        "moduleResolution": "node"
    },

    "exclude": ["dist/", "node_modules/"],
    "include": ["src/**/*"]
}