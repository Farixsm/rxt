{
    "name": "rxt-runtime",
    "version": "1.0.1",
    "description": "An easy to use WASM runtime.",
    "main": "./dist/api.js",
    "type": "module",
    "types": "./src/export.ts",
    "scripts": {
        "debug": "node debug/debug.js",
        "test": "npx mocha",
        "pretest": "npm run build",
        "publish": "npm publish --access=public",
        "prepublish": "npm run build",
        "build": "npx tsc",
        "lint": "npm run build -- --noEmit",
        "watch": "npm run build -- --watch",
        "logo": "python build.py"
    },
    "bin": {
        "rxt": "./cli/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kowarite/rxt.git"
    },
    "keywords": [
        "rxt",
        "wasm",
        "runtime"
    ],
    "engines": {
        "node": ">=12"
    },
    "author": "kowarite",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kowarite/rxt/issues"
    },
    "homepage": "https://github.com/kowarite/rxt#readme",
    "devDependencies": {
        "@types/node": "^16.3.1",
        "mocha": "^9.0.2",
        "prettier": "^2.3.2",
        "typescript": "^4.3.5",
        "wat-wasm": "^1.0.37"
    },
    "dependencies": {
        "chalk": "^4.1.1",
        "commander": "^8.0.0",
        "minimist": "^1.2.5"
    }
}
